{
  "manifest_version": 3,
  "name": "PRism",
  "version": "1.0.0",
  "description": "Auto-generate PR/MR titles and descriptions using AI",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://gitlab.com/*",
    "https://api.lucentapps.in/*",
    "http://10.111.0.67:3000/*",
    "http://10.12.165.88:3000/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://api.lucentapps.in http://10.111.0.67:3000 http://10.12.165.88:3000"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "prism@extension",
      "strict_min_version": "128.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://gitlab.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PRism",
    "default_icon": "icons/prism-logo.svg"
  },
  "icons": {
    "128": "icons/prism-logo.svg"
  }
}
