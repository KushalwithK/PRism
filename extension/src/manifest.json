{
  "manifest_version": 3,
  "name": "PRism",
  "version": "1.0.0",
  "description": "Auto-generate PR/MR titles and descriptions using AI",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://gitlab.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "prism@extension",
      "strict_min_version": "128.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/compare/*",
        "https://github.com/*/pull/new/*",
        "https://gitlab.com/*/-/merge_requests/new*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PRism",
    "default_icon": "icons/prism-logo.svg"
  },
  "icons": {
    "128": "icons/prism-logo.svg"
  }
}
