generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PRO
  MAX
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
}

model User {
  id                String         @id @default(uuid())
  email             String         @unique
  passwordHash      String
  name              String
  razorpayCustomerId String?       @unique
  defaultTemplateId String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  defaultTemplate   Template?      @relation("UserDefaultTemplate", fields: [defaultTemplateId], references: [id], onDelete: SetNull)
  templates         Template[]     @relation("UserTemplates")
  generations       Generation[]
  refreshTokens     RefreshToken[]
  subscriptions     Subscription[]

  @@map("users")
}

model Product {
  id          String        @id @default(uuid())
  slug        String        @unique
  name        String
  description String
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())

  plans         ProductPlan[]
  subscriptions Subscription[]

  @@map("products")
}

model ProductPlan {
  id              String   @id @default(uuid())
  productId       String
  plan            Plan
  razorpayPlanId  String?
  monthlyPrice    Int      @default(0)
  usageLimit      Int
  displayName     String   @default("")
  description     String   @default("")
  currency        String   @default("â‚¹")
  period          String?
  features        Json     @default("[]")
  highlighted     Boolean  @default(false)
  badge           String?
  sortOrder       Int      @default(0)

  product         Product  @relation(fields: [productId], references: [id])

  @@unique([productId, plan])
  @@map("product_plans")
}

model Subscription {
  id                       String             @id @default(uuid())
  userId                   String
  productId                String
  plan                     Plan               @default(FREE)
  status                   SubscriptionStatus @default(ACTIVE)
  usageCount               Int                @default(0)
  usageLimit               Int                @default(5)
  razorpaySubscriptionId   String?            @unique
  currentPeriodStart       DateTime           @default(now())
  currentPeriodEnd         DateTime
  cancelAtPeriodEnd        Boolean            @default(false)
  createdAt                DateTime           @default(now())
  updatedAt                DateTime           @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
  @@map("subscriptions")
}

model Template {
  id           String       @id @default(uuid())
  userId       String?
  name         String
  description  String       @default("")
  body         String
  isPredefined Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  user         User?        @relation("UserTemplates", fields: [userId], references: [id], onDelete: Cascade)
  defaultFor   User[]       @relation("UserDefaultTemplate")
  generations  Generation[]

  @@map("templates")
}

model Generation {
  id               String   @id @default(uuid())
  userId           String
  templateId       String?
  platform         String
  repoUrl          String
  baseBranch       String?
  compareBranch    String?
  prTitle          String
  prDescription    String
  diffSummary      String
  promptTokens     Int?
  completionTokens Int?
  totalTokens      Int?
  createdAt        DateTime @default(now())

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  template         Template? @relation(fields: [templateId], references: [id], onDelete: SetNull)

  @@map("generations")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}
